<?xml version="1.0" encoding="utf-8"?>
<manifest package="eu.focusnet.app"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="1"
          android:versionName="0.0.1">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.EntryPointActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".activity.FocusActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".activity.ProjectActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.FocusActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".activity.PageActivity"
            android:parentActivityName=".activity.ProjectActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".activity.TestActivity"
            android:label="@string/title_activity_test"
            android:parentActivityName=".activity.FocusActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".activity.ImageActivity"
            android:label="@string/title_activity_image"
            android:screenOrientation="landscape">
        </activity>

        <activity
            android:name=".activity.WebViewTestActivity"
            android:parentActivityName=".activity.FocusActivity"
            android:screenOrientation="landscape">
        </activity>

        <service
            android:name=".service.BookmarkService"
            android:screenOrientation="landscape"
            android:exported="false">
        </service>


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key"/>
    </application>

</manifest>
