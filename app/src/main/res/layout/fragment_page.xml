<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="eu.focusnet.app.fragment.PageFragment"
    android:orientation="vertical"
    android:focusableInTouchMode="false"
    android:id="@+id/pageInfo"
    android:longClickable="true">


    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pageId" />

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pageTitle" />

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pageDescription" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f8060a12"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberOfWidgets" />


</LinearLayout>
