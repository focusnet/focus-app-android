<resources>

    <style name="FocusTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>

        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>

        <item name="android:listViewStyle">@style/FocusListStyle</item>

        <item name="android:colorBackground">@color/defaultBackground</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FocusText">
    </style>

    <style name="FocusText.Medium">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">@dimen/focus_line_height_multiplier</item>
    </style>

    <style name="FocusText.Big">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="FocusSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_marginTop">@dimen/focus_spinner_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/focus_spinner_vertical_margin</item>
    </style>

    <style name="FocusSpinner.Big">
        <item name="android:layout_marginTop">@dimen/focus_spinner_vertical_margin_big</item>
        <item name="android:layout_marginBottom">@dimen/focus_spinner_vertical_margin_big</item>
        <item name="android:padding">@dimen/focus_spinner_vertical_margin</item>
    </style>

    <style name="FocusToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="FocusDrawer">
        <item name="android:layout_width">@dimen/focus_drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/defaultBackground</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>

    <style name="FocusDrawerHeader">
        <item name="android:padding">@dimen/focus_default_spacing_x1_25</item>
    </style>

    <style name="FocusDrawerLogo">
        <item name="android:src">@drawable/focus_logo_small</item>
        <item name="android:contentDescription">@string/caption_focus_logo</item>
        <item name="android:layout_marginBottom">@dimen/focus_default_spacing_x1_25</item>
        <item name="android:layout_height">@dimen/focus_drawer_min_height</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="FocusDrawerHeaderInfoItem">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="FocusListStyle">
        <item name="android:dividerHeight">@dimen/focus_divider_height</item>
        <item name="android:divider">@color/listDividerColor</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
    </style>


    <style name="FocusListItem">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/focus_text_size_big</item>
    </style>


    <style name="FocusListItem.Discrete">
        <item name="android:textColor">@color/textColorDiscrete</item>
        <item name="android:textSize">@dimen/focus_text_size_medium</item>
    </style>

    <style name="FocusListChevron">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/focus_default_spacing_x1_25</item>
        <item name="android:layout_marginEnd">@dimen/focus_default_spacing_x0_75</item>
        <item name="android:paddingTop">@dimen/focus_default_spacing</item>
        <item name="android:paddingBottom">@dimen/focus_default_spacing</item>
    </style>
</resources>
