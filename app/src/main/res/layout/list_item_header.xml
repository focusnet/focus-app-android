<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/header_left_icon"
        android:layout_width="@dimen/picto_width"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="22dip"/>

    <TextView
        android:id="@+id/header_title"
        style="@style/HeaderTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="16dip"
        android:layout_toEndOf="@id/header_left_icon"
        android:gravity="center_vertical"
        android:paddingEnd="40dip"/>

    <ImageView
        android:id="@+id/header_right_icon"
        android:layout_width="64dip"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dip"/>

</RelativeLayout>