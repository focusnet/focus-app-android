<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/focus_default_spacing_x0_75"
        android:gravity="center"
        android:text="@string/invalid_configuration_for_widget"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/invalid_widget_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/unknown_path"
        android:textColor="@color/defaultTextColor"
        android:textSize="@dimen/focus_text_size_medium"
        android:textStyle="italic"/>
</LinearLayout>
